.wa-comp-CLOUDBASE_STANDARD-Modal {
  /**
     * 使用less书写样式
     * */
}
.wa-comp-CLOUDBASE_STANDARD-Modal.lcap-modal .lcap-modal__mask {
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 10;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  transition: all 300ms ease-out;
}
.wa-comp-CLOUDBASE_STANDARD-Modal.lcap-modal .lcap-modal__dialog {
  transform: translateY(100%);
  transition: all 300ms ease-out;
  width: 100%;
  max-height: 90%;
  min-height: 470rpx;
  padding: 30rpx 30rpx 100rpx;
  z-index: 20;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background: white;
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
}
.wa-comp-CLOUDBASE_STANDARD-Modal.lcap-modal .lcap-modal__dialog.enter {
  transform: translateY(0);
}
.wa-comp-CLOUDBASE_STANDARD-Modal.lcap-modal .lcap-modal__close_btn {
  top: 10rpx;
  right: 20rpx;
  position: absolute;
  cursor: pointer;
}
